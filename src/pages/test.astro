---
import { getCollection } from "astro:content";
const allLearnContent = await getCollection("learn");
---

<div>
    {allLearnContent.map((item) => (
            <div>
                <h2>{item.data.title}</h2>
                <p>Category: {item.data.category}</p>
                <p>Description: {item.data.description}</p>
                <img src={item.data.image.url} alt={item.data.image.alt} width="200"/>
            </div>
    ))}
</div>