---
interface Props {
    title: string;
    description: string;
    image: {
        url: string;
        alt: string;
    };
    url: string;
}

const { title, description, image, url } = Astro.props;
---

<li class="card">
    <a class="card__link" href={url}>
        <div class="center">
            <img
                    class="card__img"
                    width="226"
                    height="127"
                    src={image.url}
                    alt={image.alt}
            />
        </div>
        <h3 class="card__title">
            {title}
        </h3>
        <p class="card__txt">
            {description}
        </p>
    </a>
</li>