---
interface Props {
    title: string;
    description: string;
    image?: {
        url: string;
        alt: string;
    };
    url: string;
    tags?: string[];
}

const { title, description, url, tags = [] } = Astro.props;
---

<li class="article-card">
    <a href={url}>
        <div class="article-content">
            <div class="article-text">
                <h3>{title}</h3>
                <p>{description}</p>
            </div>
            {tags && tags.length > 0 && (
                    <div class="article-tags">
                        {tags.map(tag => <span class="tag">{tag}</span>)}
                    </div>
            )}
        </div>
    </a>
</li>

<style>
    .article-card {
        margin-bottom: 1rem;
        list-style: none;
    }

    .article-card a {
        text-decoration: none;
        display: block;
        transition: transform 0.3s ease;
    }

    .article-content {
        background: var(--white);
        padding: 1.5rem;
        border-radius: 0.5rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        transition: background-color 0.3s ease; /* transition for background colour*/
    }

    .article-text h3 {
        font-family: var(--header);
        font-size: 1.2rem;
        margin: 0 0 0.5rem 0;
        color: var(--black);

    }

    .article-text p {
        font-family: var(--body);
        font-size: 0.9rem;
        margin: 0;
        text-indent: 0;
        color: var(--black);

    }

    .article-tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .tag {
        background: var(--main-green);
        color: var(--white);
        padding: 0.2rem 0.8rem;
        border-radius: 1rem;
        font-size: 0.8rem;
        font-family: var(--body);
        transition: all 0.3s ease;
    }

    /* Hover effects*/
    .article-card a:hover {
        transform: translateY(-6px);  /* Lyfter kortet lätt */
    }

    .article-card a:hover .article-content {
        background: var(--main-green);
    }

    .article-card a:hover .article-text h3,
    .article-card a:hover .article-text p {
        color: var(--text);  /* Vit text vid hover */
    }

    .article-card a:hover .tag {
        background: var(--background);  /* Svart bakgrund för tags vid hover */
        color: var(--text);  /* Vit text i tags behålls vid hover */
    }

</style>