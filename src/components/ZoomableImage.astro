---
// components/ZoomableImage.astro
interface Props {
    src: string;
    alt: string;
    caption?: string;
}

const { src, alt, caption } = Astro.props;
---

<div class="image-container">
    <img src={src} alt={alt} class="zoomable-image" loading="lazy" />
    {caption && <p class="image-caption">{caption}</p>}
</div>

<style>
    .image-container {
        margin: 2rem 0;
        text-align: center;
    }

    .zoomable-image {
        max-width: 100%;
        border-radius: 8px;
        cursor: zoom-in;
    }

    .image-caption {
        font-size: 0.9rem;
        color: #666;
        margin-top: 0.5rem;
        font-style: italic;
    }

    /* Enkel centrerad positionering utan transitions */
    .zoomable-image.zoomed {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        max-width: 80%;      /* Tillbaka till luftig storlek */
        max-height: 80vh;    /* Behåller god marginal i höjdled */
        z-index: 1000;
        cursor: zoom-out;
        object-fit: contain;
    }

    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.8);
        z-index: 999;
        display: none;
    }

    .overlay.active {
        display: block;
    }

    @media (max-width: 600px) {
        .zoomable-image.zoomed {
            max-width: 90%;
            max-height: 85vh;
        }
    }
</style>

<script>
    const overlay = document.createElement('div');
    overlay.className = 'overlay';
    document.body.appendChild(overlay);

    // Enkel scroll-hantering
    const toggleScroll = (disable: boolean) => {
        document.body.style.overflow = disable ? 'hidden' : '';
    };

    document.querySelectorAll('.zoomable-image').forEach((img) => {
        img.addEventListener('click', (e) => {
            e.stopPropagation();
            const isZooming = !img.classList.contains('zoomed');
            img.classList.toggle('zoomed');
            overlay.classList.toggle('active');
            toggleScroll(isZooming);
            (img as HTMLElement).style.cursor = isZooming ? 'zoom-out' : 'zoom-in';
        });
    });

    document.addEventListener('click', (e) => {
        const zoomedImage = document.querySelector('.zoomable-image.zoomed');
        if (zoomedImage && !(e.target as Element).closest('.zoomable-image')) {
            zoomedImage.classList.remove('zoomed');
            overlay.classList.remove('active');
            toggleScroll(false);
            (zoomedImage as HTMLElement).style.cursor = 'zoom-in';
        }
    });
</script>