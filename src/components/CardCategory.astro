---
interface Props {
    title: string;
    /* I had image: string, but deleted since we use Icon-Url */
    iconUrl: string,
    url: string;
    articleCount: number;
}

const { title, iconUrl, url, articleCount } = Astro.props;
---

<li class="category-card">
    <a href={url}>

            <img
                    src={iconUrl}
                    alt={`${title} category`}
                    width="65"
                    height="65"
            />

        <h3>{title}</h3>
        <p>{articleCount} artiklar</p>
    </a>
</li>

<style>
    .category-card {
        background: var(--text);
        border-radius: 0.5rem;
        padding: 2rem;
        text-align: center;
        list-style-type: none;
    }

    .category-card a {
        color: var(--black);
        text-decoration: none;
    }

    .category-icon {
        width: 100%;
        height: 100%;
        padding: 15px;
        box-sizing: border-box;
    }

    h3 {
        margin: 1rem 0 0.5rem;
        font-family: var(--header);
    }

    p {
        margin: 0;
        font-family: var(--body);
    }
</style>