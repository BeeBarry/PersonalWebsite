---
interface Props {
    title: string;
    /* I had image: string, but deleted since we use Icon-Url */
    iconUrl: string,
    url: string;
    articleCount: number;
}

const { title, iconUrl, url, articleCount } = Astro.props;
---

<li class="category-card">
    <a href={url}>

            <img
                    src={iconUrl}
                    alt={`${title} category`}
                    width="65"
                    height="65"
            />

        <h3>{title}</h3>
        <p class="article-count">{articleCount} {articleCount === 1 ? 'artikel' : 'artiklar'}</p>
    </a>
</li>

<style>
    .category-card {
        list-style-type: none;
        margin-bottom: 1rem;
    }

    .category-card a {
        color: var(--black);
        text-decoration: none;
        background: var(--white);
        padding: 1.5rem;
        border-radius: 0.5rem;
        text-decoration: none;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        transition: transform 0.3s ease, background-color 0.3s ease;
    }

    .category-icon {
        width: 100%;
        height: 100%;
        padding: 15px;
        box-sizing: border-box;
    }

    h3 {
        margin: 1rem 0 0.5rem;
        font-family: var(--header);
        color: var(--black);
    }

    p {
        margin: 0;
        font-family: var(--body);
    }

    .article-count {
        margin: 0;
        background: var(--main-green);
        color: var(--white);
        padding: 0.2rem 0.8rem;
        border-radius: 1rem;
        font-size: 1rem;
        font-family: var(--body);
    }

    /* Hover effects - helt nya */
    .category-card a:hover {
        transform: translateY(-10px);
        background: var(--main-green);
    }

    .category-card a:hover h3 {
        color: var(--text);
    }

    .category-card a:hover .article-count {
        background: var(--background);
        color: var(--text);
    }

</style>