---
interface Props {
    title: string;
    image: string;
    url: string;
    articleCount: number;
}

const { title, image, url, articleCount } = Astro.props;
---

<li class="category-card">
    <a href={url}>
        <div class="image-circle">
            <img
                    src={image}
                    alt={`${title} category`}
                    width="80"
                    height="80"
            />
        </div>
        <h3>{title}</h3>
        <p>{articleCount} artiklar</p>
    </a>
</li>

<style>
    .category-card {
        background: var(--text);
        border-radius: 0.5rem;
        padding: 2rem;
        text-align: center;
        list-style-type: none;
    }

    .category-card a {
        color: var(--button);
        text-decoration: none;
    }

    .image-circle {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: var(--background);
        margin: 0 auto;
        overflow: hidden;
    }

    .image-circle img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    h3 {
        margin: 1rem 0 0.5rem;
        font-family: var(--header);
    }

    p {
        margin: 0;
        font-family: var(--body);
    }
</style>